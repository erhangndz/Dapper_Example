@model List<ResultCategoryViewModel>
@{
    ViewData["Title"] = "Index";
}

<h3 class="container">Kategoriler</h3>
<br />

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td>@item.CategoryStatus</td>
            <td>
                <a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a>
            </td>

            <td>
                <a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/Category/AddCategory" class="btn btn-dark">Yeni Kategori Girişi</a>

